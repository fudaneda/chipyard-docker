{
  "name": "Debian Bookworm (32-core preferred)",
  "image": "debian:bookworm",

  // Codespaces / devcontainer 规范：这里只能写最低规格
  "hostRequirements": {
    "cpus": 32,
    "memory": "128gb",
    "storage": "64gb"
  },

  // 常用开发包
  "postCreateCommand": "apt-get update && apt-get install -y sudo git curl ca-certificates build-essential && rm -rf /var/lib/apt/lists/*",

  // 给默认用户加 sudo（Codespaces 默认是 vscode 用户；纯 Docker 环境可能是 root）
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode",
      "installZsh": true,
      "upgradePackages": true
    }
  },

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        "ms-vscode.cpptools",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens"
      ]
    }
  },

  // 可选：转发端口
  "forwardPorts": [3000, 8000],

  // 可选：把仓库挂到 /workspaces/xxx
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}"
}
