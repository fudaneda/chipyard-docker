{
  "name": "Chipyard (Fudan EDA image)",
  "image": "ghcr.io/fudaneda/chipyard:latest",
  "remoteUser": "root",
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb"
  },
  "postCreateCommand": "echo 'Chipyard devcontainer ready.'",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-vscode.remote-containers",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens"
      ]
    }
  },
  "forwardPorts": [],
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}"
}
